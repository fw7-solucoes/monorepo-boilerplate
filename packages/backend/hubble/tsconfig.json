{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": ["./src/@types"],
    "rootDirs": ["./src", "./__tests__"],

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "test/*": ["./__tests__/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./__tests__/**/*.ts"]
}
